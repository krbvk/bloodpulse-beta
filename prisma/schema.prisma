// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  role          Role          @default(USER)
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  appointments  Appointment[] @relation("UserAppointments")
  gender        String?
  age           Int?
}


model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model OTP {
  id        String   @id @default(cuid())
  email     String   @unique
  code      String
  expiresAt DateTime
}

model Donor {
  id        String   @id @default(cuid())
  name      String
  bloodType String
  email     String   @unique
  gender    String   
  age       Int  
  contactEmail String?
  donationCount  Int?@default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Appointment {
  id          String   @id @default(cuid())
  requesterId String
  requester   User     @relation("UserAppointments", fields: [requesterId], references: [id], onDelete: Cascade)
  datetime    DateTime
  message     String
  bloodType   String?
  variant    String?
  displaySubject String
  subject   AppointmentSubject @default(BloodDonation)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([requesterId])
}

enum Role {
  ADMIN @map("admin")
  USER  @map("user")
}

enum AppointmentSubject {
  BloodDonation
  BloodRequest
}

model DonationControl {
  id       Int      @id @default(1) // single row (always id=1)
  enabled  Boolean  @default(false)
  updatedAt DateTime @updatedAt
}